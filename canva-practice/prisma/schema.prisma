generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int      @id @default(autoincrement())
  name           String
  email          String   @unique
  picture        String
  subscriptionId String?
  Design         Design[]
}

model Design {
  id           Int     @id @default(autoincrement())
  name         String
  width        Int
  height       Int
  jsonTemplate String?
  imagePreview String?
  authorId     Int
  author       User    @relation(fields: [authorId], references: [id])
}
